# Database
DATABASE_URL=sqlite:///./athle_tracker.db

# Application
APP_NAME=Athle Tracker
APP_VERSION=1.0.0
DEBUG=False

# Scraping Configuration
SCRAPING_MIN_DELAY=2.0
SCRAPING_MAX_DELAY=3.0
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30

# Scheduler Configuration
SCHEDULER_ENABLED=True
SCHEDULER_START_HOUR=1
SCHEDULER_START_MINUTE=45
SCHEDULER_END_HOUR=3
SCHEDULER_END_MINUTE=15
TIMEZONE=Europe/Paris

# Security
SECRET_KEY=your-secret-key-change-this-in-production
COOKIE_NAME=athle_tracker_auth
COOKIE_EXPIRY_DAYS=30

# Admin Default Credentials (change after first login!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/athle_tracker.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Athle.fr URLs
ATHLE_BASE_URL=https://www.athle.fr/bases/liste.aspx
